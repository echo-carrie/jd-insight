{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.ts",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": ["server/**"]
      }
    }
  ],
  "functions": {
    "server/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "NUXT_OPENAI_API_KEY": "@openai-api-key",
    "NUXT_JWT_SECRET": "@jwt-secret",
    "NUXT_PUBLIC_SITE_URL": "@site-url"
  }
}